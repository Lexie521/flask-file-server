services:
  - type: web
    name: flask-file-server
    env: python
    region: japan  # 可选，亚洲访问较快
    plan: free
    buildCommand: "pip install -r requirements.txt"
    startCommand: "python slides_sharing.py"
    envVars:
      - key: GITHUB_REPO
        value: Lexie521/flask-file-server
      - key: GITHUB_TOKEN
        sync: false  # 在 Render 控制台里手动填入

